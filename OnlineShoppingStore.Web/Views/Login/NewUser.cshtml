@model OnlineShoppingStore.Domain.Entities.User

<div class="panel panel-default">
    <div class="panel-heading">Login Page</div>
    <div class="panel-body">
        <form id="frmNewUser" method="post">
            <div class="form-group">
                <div class="col-lg-3">
                    <label>User Name</label>
                </div>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Password</label>
                </div>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Email</label>
                </div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Phone</label>
                </div>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Address 1</label>
                </div>
                @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Address 2</label>
                </div>
                @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="col-lg-3 text-center">
                    <input type="button" id="btnSave" value="Save" class="btn btn-primary" />
                    <input type="button" id="btnCancel" value="Cancel" class="btn btn-primary" onclick="window.location.href = 'Display'" />
                </div>

            </div>
        </form>
    </div>
</div>

